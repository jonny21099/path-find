WindowManager:
	LoginScreen:
	MainActivity:

<LoginScreen>:
	name: "login_screen_interaction"
	GridLayout:
		cols: 1	
		padding: 200
		row_force_default: True
		col_force_default: True
		row_default_height: '60dp'
		col_default_width: '300dp'
		size_hint_x: None
		size_hint_y: None
		height: self.minimum_height

		GridLayout:
			cols: 2
			Label:
				text: "Username"

			TextInput:
				id: username
				multiline: False

			Label:
				text: "Password"


			TextInput:
				id: password
				multiline: False
				
		Button:
			text: "Login"
			size_hint: 0,0.30
			on_release: 
				app.root.current = "path_finding_interaction"

<MainActivity>:
	name: "path_finding_interaction"

	Button:
		text: "Go Back"
		on_release: 
			app.root.current = "login_screen_interaction"